
{% style %}
  .recently-viewed-products_container {
      padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  @media screen and (min-width: 1025px) {
      .recently-viewed-products_container {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  }
{% endstyle %}


{{ 'section-recently-viewed.css' | asset_url | stylesheet_tag }}
{% render 'recently-viewed-products' %}


{% schema %}
    {
        "name": "t:sections.recently-viewed-product.name",
        "class": "product-recently-viewed",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 80
              },
              {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 80
              }            
        ],
        "presets": [
            {
                "name": "t:sections.recently-viewed-product.presets.name"
            }
        ]
    }
{% endschema %}
